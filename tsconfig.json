{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "name": "@astrojs/ts-plugin",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"]
    }
  }
}
